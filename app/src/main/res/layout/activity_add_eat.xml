<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.eatwhat.activity.AddEatActivity">

    <RelativeLayout
        android:id="@+id/act_rl_edit_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/myColorBg">

        <TextView
            android:id="@+id/act_tv_edit_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="还想吃什么"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/act_img_edit_head_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="12dp"
            android:src="@drawable/icon_edit_back" />
    </RelativeLayout>

    <com.example.library.AutoFlowLayout
        android:id="@+id/act_chip_edit_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/act_rl_edit_head"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/act_img_edit_add"
        android:paddingRight="10dp" />


    <ImageView
        android:id="@+id/act_img_edit_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/act_rl_edit_head"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_edit_add" />

</RelativeLayout>
